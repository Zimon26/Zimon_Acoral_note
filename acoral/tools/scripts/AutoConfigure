#!/bin/sh
CONFIG_H=.tmpcfg.h
echo "/*" >$CONFIG_H
echo " * Automatically generated by config: don't edit" >>$CONFIG_H
echo " */" >>$CONFIG_H
echo "#ifndef AUTOCONF_H" >> $CONFIG_H
echo "#define AUTOCONF_H" >> $CONFIG_H

sed '/^#/d' $1>.tmpcfg
sed '/^$/d' .tmpcfg>.tmpcfg1
sed 's/^/#define /g' .tmpcfg1>.tmpcfg2
sed 's/=y//g' .tmpcfg2>.tmpcfg3
sed 's/=/ /g' .tmpcfg3>>$CONFIG_H
echo "#endif" >> $CONFIG_H
mv $CONFIG_H include/autocfg.h
rm .tmpcfg*
